<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Talis.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Talis.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Styles.css" asp-append-version="true"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>

<body id="cuerpo">
    <header id="nav">
        <nav class="navbar navbar-expand-sm p-1 bg-dark">
            <a class="navbar-brand mb-0">
                <img class="d-inline-block align-top w-25" alt="Logo Talis"/>
            </a>

            <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                <ul class="navbar-nav"> 
                    <li class="nav">
                        <a class="enlaceNav">Inicio</a>
                    </li>
                    <li class="nav">
                        <a class="enlaceNav">Acerca de nosotros</a>
                    </li>
                    <li class="nav">
                        <a class="enlaceNav">Inicio de Sesión</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div div="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="footer" class="p-3">
        <footer class="bg-light text-center text-black">
            <div class="derechos text-center"
                 style="background-color: white">
                <a>&copy; Derechos Reservados @DateTime.Now.Year Tali's Fast Food</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
