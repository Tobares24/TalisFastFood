@model Infraestructure.Models.MESA

@{ ViewData["Title"] = "Editar Mesas";
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml"; }

<header style="padding: 20px; width: 100%; background-color: #F78935">
    <h3 class="text-center text-white">Información de la Mesa</h3>
</header>

<div class="text-start mt-4">
    <a class="ps-2 enlaceVolver" href="@Url.Action("Index", "Mesas")"><i class="fa-solid fa-arrow-left"></i>Volver</a>
</div>

<div class="d-flex justify-content-center align-content-center align-items-center">
    <img src="~/Resources/mesa.jpg" style="width:20%;" />
</div>

@using (Html.BeginForm("Save", "Mesas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(id => Model.ID_MESA)

    <div class="w-100 d-flex justify-content-center align-content-center align-items-center ps-5 pb-4">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="m-4 w-25">
            @Html.LabelFor(model => model.COD_MESA, htmlAttributes: new { @class = "form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.COD_MESA, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>

        <div class="m-4 w-25">
            @Html.LabelFor(model => model.CAPACIDAD, htmlAttributes: new { @class = "form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CAPACIDAD, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CAPACIDAD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="m-4 w-25">
            @Html.LabelFor(model => model.RESTAURANTE, htmlAttributes: new { @class = "form-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ID_RESTAURANTE,
                                                     (SelectList)ViewBag.IdRestaurante,
                                                     "Selecione el restaurante",
                                                     htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_RESTAURANTE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="m-4 w-25">

            @Html.LabelFor(model => model.ESTADO_MESA, htmlAttributes: new { @class = "form-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ID_ESTADO_MESA,
                                                         (SelectList)ViewBag.IdEstado,
                                                         "Selecione el estado",
                                                         htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_ESTADO_MESA, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="text-center d-flex justify-content-center align-content-center align-items-center pt-5  pb-4">
        <button type="submit" value="Guardar" class="botones mt-1 pt-2 pb-2" id="bg-link" style="width: 12%;">
            <span><i class="fa-solid fa-floppy-disk pe-1"></i>Guardar</span>
        </button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}