@model Infraestructure.Models.MESA
@{ ViewBag.Title = "Apertura de Mesa";
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml"; }

<header style="padding: 20px; width: 100%; background-color: #F78935">
    <h3 class="text-center text-white">Apertura de Mesa</h3>
</header>



<div class="text-start mt-4">
    <a class="ps-2 enlaceVolver" href="@Url.Action("Index", "Mesas")"><i class="fa-solid fa-arrow-left"></i>Volver</a>
</div>

<div class="d-flex justify-content-center align-content-center align-items-center">
    <img src="~/Resources/mesa.jpg" style="width:20%;" />
</div>

<div class="w-100 d-flex justify-content-center align-content-center align-items-center pb-4">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="m-4 w-25">
        <label class="mb-1">Código</label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.COD_MESA, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        </div>
    </div>

    <div class="m-4 w-25">
        <label class="mb-1">Restaurante</label>

        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ID_RESTAURANTE,
                                                                     (SelectList)ViewBag.IdRestaurante,
                                                                     "Selecione el restaurante",
                                                                     htmlAttributes: new { @class = "form-control", disabled = "disabled" })
        </div>
    </div>

    <div class="m-4 w-25">
        <label class="mb-1">Estado</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ID_ESTADO_MESA,
                                                                     (SelectList)ViewBag.IdEstado,
                                                                     "Selecione el estado",
                                                                     htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="m-4 w-25">
        <label class="mb-1">Mesero</label>

        <div class="col-md-10">
            @Html.DropDownListFor(model => model.USUARIO,
                                                                         (SelectList)ViewBag.IdUsuario,
                                                                         "Selecione el mesero",
                                                                         htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.USUARIO, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="m-4 w-25">
        <label class="mb-1">Número de Orden</label>

        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ORDEN,
                                                                         (SelectList)ViewBag.IdOrden,
                                                                         "Selecione la orden",
                                                                         htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ORDEN, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

<div class="text-center d-flex justify-content-center align-content-center align-items-center pt-3  pb-3">
    <button type="submit" value="Guardar" class="botones mt-1 pt-2 pb-2" id="bg-link" style="width: 12%;">
        <span><i class="fa-solid fa-floppy-disk pe-1"></i>Guardar</span>
    </button>
</div>