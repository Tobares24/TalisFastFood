@model Infraestructure.Models.MESA
@{
    ViewBag.Title = "Apertura de Mesa";
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml";
}

<header style="padding: 20px; width: 100%; background-color: #F78935">
    <h3 class="text-center text-white">Apertura de Mesa</h3>
</header>

<div class="text-start mt-4">
    <a class="ps-2 enlaceVolver" href="@Url.Action("ListaMesas", "Mesas")"><i class="fa-solid fa-arrow-left"></i>Volver</a>
</div>

<div class="d-flex justify-content-center align-content-center align-items-center">
    <img src="~/Resources/mesa.jpg" style="width:20%;" />
</div>

<div class="w-100 d-flex justify-content-center align-content-center align-items-center pb-4">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="m-4 w-25">
        @Html.LabelFor(model => model.COD_MESA, htmlAttributes: new { @class = "form-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.COD_MESA, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        </div>
    </div>

    <div class="m-4 w-25">
        @Html.LabelFor(model => model.ESTADO_MESA, htmlAttributes: new { @class = "form-label" })
        <input class="form-control" value="Ocupada" disabled />
    </div>

    <div class="m-4 w-25">
        <label class="mb-1">Mesero</label>
        <select class="form-control">
            <option>Default select</option>
        </select>
    </div>

    <div class="m-4 w-25">
        <label class="mb-1">Orden</label>
        <select class="form-control">
            <option>Default select</option>
        </select>
    </div>
</div>