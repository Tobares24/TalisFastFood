@model Infraestructure.Models.USUARIO
@{
    ViewBag.Title = "Detalle Usuario";
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml";
}

<header style="padding: 20px; width: 100%; background-color: #F78935">
    <h3 class="text-center text-white">Detalle Usuario</h3>
</header>

<div class="text-start mt-4">
    <a class="ps-2 enlaceVolver" href="@Url.Action("Index", "Usuario")"><i class="fa-solid fa-arrow-left"></i>Volver</a>
</div>

<div class="d-flex justify-content-center align-content-center align-items-center mt-5">
    <img src="~/Resources/user.jpg" style="width:15%;" />
</div>

<div class="row" style="text-align: justify; margin: 5% 5% 8% 5%; ">
    <div class="w-25">
        <div class="mx-2 my-2">
            <label style="font-weight:bold;">Cédula: </label>
            @Html.DisplayFor(model => model.ID_USUARIO)
        </div>

        <div class="mx-2 my-2">
            <label style="font-weight:bold;">Nombre: </label>
            @Html.DisplayFor(model => model.NOMBRE)
        </div>
    </div>

    <div class="w-25">
        <div class="mx-2 my-2">
            <label style="font-weight:bold;">Primer Apellido: </label>
            @Html.DisplayFor(model => model.PRIMER_APELLIDO)
        </div>

        <div class="mx-2 my-2">
            <label style="font-weight:bold;">Segundo Apellido: </label>
            @Html.DisplayFor(model => model.SEGUNDO_APELLIDO)
        </div>
    </div>

    <div class="w-25">
        <div class="mx-2 my-2">
            <label style="font-weight:bold;">Email: </label>
            @Html.DisplayFor(model => model.EMAIL)
        </div>

        <div class="mx-2 my-2">
            <label style="font-weight:bold;">Tipo Rol: </label>
            @Html.DisplayFor(model => model.ROL.TIPO_ROL)
        </div>
    </div>

    <div class="w-25">
        <div class="mx-2 my-2">
            <label style="font-weight:bold;">Restaurante: </label>
            
            @if (Model.RESTAURANTE is null)
            {
                <label>No Aplica</label>
            }
            else
            {
                @Html.DisplayFor(model => model.RESTAURANTE.NOMBRE)
            }
        </div>
    </div>
</div>